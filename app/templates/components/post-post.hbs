<div class="row full-post">
  {{#if reportSubmitted}}
    Thank you for submitting your report.
  {{else}}

    <div class="two columns"></div>
    <div class="eight columns">
      {{#link-to "index" class="home-link button"}}
        &lt; FLOWERPOT
      {{/link-to}}

      <h3 class="post-title">{{model.title}}</h3>

      <span>Warning notes:</span>
      <label class='warning-note'>{{model.note}}</label>
      <p>{{report-abuse model=model createReport="createReport"}}</p>

      <button class="button button-decode button-primary" {{action 'decodeMe'}} disabled={{isDecoded}} style='height:250px'>Click here to diplay the post content if you're happy with the content note above</button>

      <article class='post-content' style='display:none'>{{{visibleContent}}}</article>
    </div>

  {{/if}}
</div>
