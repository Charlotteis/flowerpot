{
  "rules": {
    "posts": {
      "$postid": {
        ".validate": "newData.hasChildren(['encodedContent', 'note', 'title', 'timestamp'])",
        "encodedContent": {
          ".validate": "newData.isString()"
        },
        "note": {
          ".validate": "newData.isString()"
        },
        "title": {
          ".validate": "newData.isString()"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        },
        ".write": "data.val() == null",
        ".read": "true"
      },
      ".read": "true"
    }
  }
}
